{
	"name": "RenderBlocking",
	"version": "0.1.0",
	"author": "lihaohong6",
	"url": "https://www.mediawiki.org/wiki/Extension:RenderBlocking",
	"descriptionmsg": "renderblocking-desc",
	"license-name": "GPL-2.0-or-later",
	"requires": {
		"MediaWiki": ">= 1.43.0"
	},
	"AutoloadNamespaces": {
		"MediaWiki\\Extension\\RenderBlocking\\": "includes/"
	},
	"HookHandlers": {
		"RenderBlockingHandler": {
			"class": "MediaWiki\\Extension\\RenderBlocking\\RenderBlockingHooks",
			"services": [
				"RenderBlocking.AssetService",
				"MainConfig",
				"UrlUtils"
			]
		}
	},
	"Hooks": {
		"BeforePageDisplay": "RenderBlockingHandler"
	},
	"ServiceWiringFiles": [
		"includes/ServiceWiring.php"
	],
	"ExtensionFunctions": [
		"MediaWiki\\Extension\\RenderBlocking\\RenderBlockingHooks::setPagesAsProtected"
	],
	"RestRoutes": [
		{
			"path": "/renderblocking/v0/assets/{asset_type}/{skin}",
			"method": "GET",
			"class": "MediaWiki\\Extension\\RenderBlocking\\RestApiRenderBlockingAssets",
			"services": [
				"RenderBlocking.AssetService",
				"SkinFactory"
			]
		}
	],
	"config": {
		"RenderBlockingInlineAssets": {
			"value": false,
			"description": "Whether css/js assets should be inlined in the page's head. Setting this to false will create a link to the resource in the head instead."
		}
	},
	"ConfigRegistry": {
		"renderblocking": "MediaWiki\\Config\\GlobalVarConfig::newInstance"
	},
	"MessagesDirs": {
		"RenderBlocking": "i18n"
	},
	"manifest_version": 2
}
